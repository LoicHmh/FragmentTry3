<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/name1"
        android:text="编号："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        />

    <TextView
        android:id="@+id/singer_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/name1"
        android:padding="4dp"/>

    <TextView
        android:id="@+id/name2"
        android:text="角度："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/singer_number"
        android:padding="4dp"
        />
    <TextView
        android:id="@+id/singer_angle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/name2"
        android:padding="4dp"/>

    <TextView
        android:id="@+id/name3"
        android:text="高度："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/singer_angle"
        android:padding="4dp"
        />

    <TextView
        android:id="@+id/singer_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/name3" />

</RelativeLayout>